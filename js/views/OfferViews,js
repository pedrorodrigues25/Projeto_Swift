// js/views/OffersView.js

import { destinations } from '/js/init.js';

function shuffle(array) {
  return array.sort(() => Math.random() - 0.5);
}

function loadOffers() {
  const offerContainer = document.querySelector('.offer-cards');
  offerContainer.innerHTML = ''; // Limpar conteÃºdo anterior

  const randomDestinations = shuffle(destinations).slice(0, 5);

  randomDestinations.forEach(dest => {
    const card = document.createElement('div');
    card.classList.add('offer-card');

    card.innerHTML = `
      <img src="${dest.img}" alt="${dest.city}">
      <h4>${dest.city}</h4>
      <span>${dest.price}</span>
    `;

    offerContainer.appendChild(card);
  });
}

document.addEventListener('DOMContentLoaded', loadOffers);
